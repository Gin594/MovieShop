@model MovieShop.Core.Models.Response.MovieDetailsResponseModel

<style>
    .card{
        border:none;
    }
    .card-container, .card-deck, .card{
        background-color:black;
    }
    .card-text, .card-title {
        color: white;
    }
</style>
<div class="card-container">
    <div class="card-deck">
        <div class="card">
            <div class="card-body">
                <img class="card-img-top" src="@Model.PosterUrl" alt="@Model.Title">
            </div>
        </div>
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">@Model.Title</h5>
                <p class="card-text">@Model.Tagline</p>
                <p class="card-text">
                    @foreach (var item in Model.Genres)
                    {
                        <span class="badge badge-secondary">@item.Name</span>
                    }
                </p>
                <p class="card-text">@Model.Overview</p>
            </div>

        </div>
        <div class="card align-items-end">
            <div class="card-body pt-5">
                <button class="btn btn-light mt-3 w-100" type="submit">REVIEW</button><br />
                <button class="btn btn-light mt-3 w-100" type="submit">TRAILER</button><br />
                <button class="btn btn-light mt-3 w-100" type="submit">BUY @Model.Price</button><br />
                <button class="btn btn-light mt-3 w-100" type="submit">WATCH MOVIE</button><br />
            </div>
        </div>
    </div>
</div>